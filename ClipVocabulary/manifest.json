{
    "manifest_version": 3,
    "name": "ClipVocabulary",
    "version": "1.0",
    "description": "Save vocabulary to study lately",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "scripting",
        "tabs",
        "storage",
        "contextMenus",
        "activeTab"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "auxiliares.js"
            ]
        }
    ]
}